@model UsersDirectoryMVC.Application.ViewModels.Assignment.NewAssignmentVm

@{
    ViewData["Title"] = "EditAssignment";
}

<h1>EditAssignment</h1>

<h4>NewAssignmentVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAssignment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Choose tags:</label><br />
                @foreach (var item in Model.Tags)
                {
                    <input type="checkbox"
                           name="TagsId"
                           value="@item.Id"
                           @if (Model.TagsId.Contains(item.Id)) { <text> checked </text> } /> @item.Name
                        <br />
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
