@model UsersDirectoryMVC.Application.ViewModels.AdminPanel.ListUsersForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" asp-controller="AdminPanel" method="post">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        UserName
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.ActionLink("Roles", "ManageRoles", new { id = item.Id }) |
                            @Html.ActionLink("Details", "ViewUser", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>