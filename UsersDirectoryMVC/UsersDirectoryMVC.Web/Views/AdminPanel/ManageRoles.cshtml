@model UsersDirectoryMVC.Application.ViewModels.AdminPanel.UserDetailVm

<form asp-action="ManageRoles">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>

            @foreach (var item in Model.Roles)
            {
                <dd class="col-sm-10">
                    <div class="checkbox">

                        <input type="checkbox"
                               name="UserRoles"
                               value="@item.Name"
                               @if (Model.UserRoles.Contains(item.Name)) { <text> checked </text> } /> @item.Name

                        </div>
                    </dd>
                        }
                </dl>
    </div>

    <div class="form-group">
        <input type="submit" value="Add role" class="btn btn-dark" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}